primaryColor = #823ce2
fontColor = #555
fontColorLight = #aaa
bgColor = #fff
bgColorDark = #eee
linkColor = primaryColor
calloutColor = #823ce2

buffer = 12px

test()
  border 1px solid blue !important
  
transition()
  -webkit-transition all 0.33s cubic-bezier(0.4, 0, 0.2, 1)
  -moz-transition all 0.33s cubic-bezier(0.4, 0, 0.2, 1)
  -o-transition all 0.33s cubic-bezier(0.4, 0, 0.2, 1)
  transition all 0.33s cubic-bezier(0.4, 0, 0.2, 1)

transform(value)
  -webkit-transform value
  -moz-transform    value
  -ms-transform     value
  -o-transform      value
  transform         value
  
animation(value)
  -webkit-animation value
  -moz-animation    value
  -o-animation      value
  animation         value

p,div,h1,h2,h3,h4,h5,h6
  color fontColor

html, body, #app, .appWrapper
  height 100%
  margin 0 !important
  background bgColor
  font-family "Work Sans", "Helvetica Neue", Helvetica, sans-serif

.content
  height 100%
  padding buffer*4 buffer*6
  animation(fadeInUp .5s ease-in-out)
  
  @media only screen and (max-width: 750px)
    padding buffer*2 buffer*3 !important

a
  text-decoration none
  color linkColor
  &:hover
    border-bottom 3px solid linkColor

ul
  list-style-type none
  margin 0
  padding 0

.nav
  position relative
  z-index 1000
  background white
  padding buffer*4 buffer*6
  top 0
  left 0
  right 0
  .navTitle
    display inline-block
  .brand
    display inline-block
    color fontColor
    font-size 24px
    a
      border-bottom none 
  .navLinks
    float right
    display inline-block
    margin 0
    .navLink
      display inline-block
      padding-right buffer
      &:not(:first-of-type)
        padding-left buffer
      
  @media only screen and (max-width: 750px)
    padding buffer*2 buffer*3
    .brand
      font-size 18px
    .navTitle
      display block
    .navLinks
      margin-top buffer*2
      float none

.active
  border-bottom 3px solid calloutColor
  color calloutColor

.calloutText
  position relative
  border-bottom 6px solid alpha(calloutColor, .8)
  // &:after
  //   content ' '
  //   position absolute
  //   bottom 2px
  //   left 0px
  //   right 0px
  //   height 13px
  //   background alpha(calloutColor, .5)
    

.Home
  .profilePhoto
    position fixed
    z-index 10
    right 0
    top 124px
    bottom buffer*4
    right buffer*4
    width 50%
    background-image linear-gradient(to right, alpha(white,.8), alpha(white,.7)), url('/images/adb_bg.jpg')
    background-size cover
    background-position center center
    animation(fadeInRight .5s ease-in-out)
  .profileText
    overflow hidden
    position relative
    z-index 100
    width 65%
    margin-bottom 10%
    h1
      font-size 3vw
      line-height 4.5vw
    
  .whatIDoSection
    position relative
    z-index 100
    background primaryColor
    padding buffer*4 0
    h1, h2,h3,h4,h5,h6, div, p
      color white
      text-align center
    .whatIDoTitle
      margin-bottom buffer*8
    li
      display block
      transition()
      .listTitle
        font-weight 100
        background primaryColor
        padding 0 buffer*2
        position relative
        margin-top buffer
        margin-bottom 56px
        &:after
          content ' '
          height 7px
          width 7px
          background darken(primaryColor, 20%)
          border-radius 100%
          position absolute
          bottom -30px
          left 50%
        &.last
          &:after
            background primaryColor
          
      p
        opacity 0
        margin-bottom 0
        padding 0
        display none
        transition()
      // &:hover
      //   p
      //     padding-bottom buffer*2
      //     opacity .8
      //     transition()
          
      
  
  @media only screen and (max-width: 1200px)
    .profilePhoto
      width auto
      left buffer*3
      right buffer*3
      bottom buffer*3
      background-image linear-gradient(to right, alpha(white,.8), alpha(white,.8)), url('/images/adb_bg.jpg')
    .profileText
      margin-bottom 200px
      width auto
      padding 0 buffer*2
      h1
        font-size 24px
        line-height 40px

.Process
  padding 48px 0 48px 72px
  .stepWrapper
    margin-top buffer*1.5
    margin-left 30px
    border-left 1px solid fontColorLight
    h1, h2,h3,h4,h5,h6, div, p
      color fontColorLight
    .stepNumber
      border 1px solid fontColorLight  
    .stepTitle
      position relative
      left -30px
      top -30px
    .stepNumber
      background bgColor
      width 60px
      height 60px
      line-height 60px
      font-size 24px
      display inline-block
      border-radius 100px
      text-align center
    .stepName
      display inline-block
      margin-left buffer*4
    
    .stepContent
      padding 0 60px 60px 80px
    
    .processSteps
      list-style-type circle
      margin-left 18px
      .processStep
        margin-bottom buffer
      
    &.activeStep
      border-left 1px solid calloutColor
      h1, h2,h3,h4,h5,h6, div, p
        color calloutColor
      .stepNumber
        border 1px solid calloutColor    


.Contact
  .contactOption
    margin-bottom buffer



@-webkit-keyframes fadeInUp {
  0%   { opacity: 0; transform: translate3d(0,10px,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}
@-moz-keyframes fadeInUp {
  0%   { opacity: 0; transform: translate3d(0,10px,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}
@-o-keyframes fadeInUp {
  0%   { opacity: 0; transform: translate3d(0,10px,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}
@keyframes fadeInUp {
  0%   { opacity: 0; transform: translate3d(0,10px,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}

@-webkit-keyframes fadeInRight {
  0%   { opacity: 0; transform: translate3d(100px,0,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}
@-moz-keyframes fadeInRight {
  0%   { opacity: 0; transform: translate3d(100px,0,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}
@-o-keyframes fadeInRight {
  0%   { opacity: 0; transform: translate3d(100px,0,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}
@keyframes fadeInRight {
  0%   { opacity: 0; transform: translate3d(100px,0,0); }
  100% { opacity: 1; transform: translate3d(0,0px,0); }
}